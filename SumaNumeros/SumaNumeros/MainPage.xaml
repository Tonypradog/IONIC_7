<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SumaNumeros.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Suma de Dos Numeros con Xamarin" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Valor uno"  Margin="5" FontSize="Large"/>
        <Entry x:Name="valor1" Margin="5" FontSize="Large" Keyboard="Numeric" />
        <Label Text="Valor dos" Margin="5" FontSize="Large"/>
        <Entry x:Name="valor2" Margin="5" FontSize="Large" Keyboard="Numeric" />
        <Button Text="Sumar" Margin="5" FontSize="Large" Clicked="Button_Clicked"/>
        <Label x:Name="resultado" Text="Resultado" Margin="5" FontSize="Large" FontAttributes="Bold"/>
    </StackLayout>

</ContentPage>
